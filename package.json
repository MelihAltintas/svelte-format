{
	"name": "svelte-format",
	"displayName": "svelte-format",
	"description": "A beautify extension for .svelte file",
	"version": "0.0.1",
	"publisher": "melihaltintas",
	"keyword": "svelte vscode format js-beautify extension",
	"icon": "images/svelte.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/MelihAltintas/svelte-format"
	},
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:svelte-format.format"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"when": "editorLangId == svelte",
				"command": "svelte-format.format",
				"title": "svelte-format"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+alt+p",
				"mac": "cmd+ctrl+p",
				"when": "editorTextFocus && !editorReadonly && editorLangId == svelte",
				"command": "svelte-format.format"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId == svelte",
					"command": "svelte-format.format",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.51.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"js-beautify": "^1.10.0",
		"pug-beautify": "^0.1.1"
	}
}
